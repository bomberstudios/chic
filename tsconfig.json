{
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "es6",
    "module": "CommonJS",
    "declaration": true
  },
  "include": ["./src"],
  "exclude": ["node_modules", "dist"]
}
